{
    "tasks": [
        {
            "type": "shell",
            "label": "Conan Build",
            "command": "${workspaceFolder}/build/build.sh",
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/local/Cellar/llvm/9.0.0_1/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/local/Cellar/llvm/9.0.0_1/bin"
            }
        }
    ],
    "version": "2.0.0"
}